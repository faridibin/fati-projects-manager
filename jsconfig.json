{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "resources/js/*"
            ],
            "@Components/*": [
                "resources/js/components/*"
            ]
        },
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "sourceMap": true,
    },
    "exclude": [
        "node_modules",
        "public"
    ]
}
